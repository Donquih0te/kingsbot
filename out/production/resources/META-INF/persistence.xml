<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="KingsBot" >
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>ru.kingsbot.entity.Player</class>
        <class>ru.kingsbot.entity.Citizen</class>
        <class>ru.kingsbot.entity.resource.Food</class>
        <class>ru.kingsbot.entity.resource.Gold</class>
        <class>ru.kingsbot.entity.resource.Iron</class>
        <class>ru.kingsbot.entity.resource.Stone</class>
        <class>ru.kingsbot.entity.resource.Wood</class>
        <class>ru.kingsbot.entity.market.FoodCost</class>
        <class>ru.kingsbot.entity.market.GoldCost</class>
        <class>ru.kingsbot.entity.market.IronCost</class>
        <class>ru.kingsbot.entity.market.StoneCost</class>
        <class>ru.kingsbot.entity.market.WoodCost</class>
        <class>ru.kingsbot.entity.market.Market</class>
        <class>ru.kingsbot.entity.conversation.Conversation</class>
        <class>ru.kingsbot.entity.building.Armory</class>
        <class>ru.kingsbot.entity.building.Capitol</class>
        <class>ru.kingsbot.entity.building.Storage</class>
        <class>ru.kingsbot.entity.building.Tower</class>
        <class>ru.kingsbot.entity.building.Wall</class>
        <class>ru.kingsbot.entity.army.Army</class>
        <class>ru.kingsbot.entity.army.Clubman</class>
        <class>ru.kingsbot.entity.army.RockThrower</class>
        <class>ru.kingsbot.entity.clan.Clan</class>
        <class>ru.kingsbot.entity.boss.BossInfo</class>
        <class>ru.kingsbot.entity.Perk</class>
        <class>ru.kingsbot.entity.donate.Donate</class>
        <properties>
            <property name="hibernate.hikari.dataSource.url" value="jdbc:postgresql://127.0.0.1:5432/civbot" />
            <property name="hibernate.hikari.dataSourceClassName" value="org.postgresql.ds.PGSimpleDataSource" />
            <property name="hibernate.hikari.dataSource.user" value="postgres" />
            <property name="hibernate.hikari.dataSource.password" value="37nolege" />
            <!--<property name="packagesToScan" value="ru.kingsbot.entity" />-->
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="create" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL95Dialect" />
            <property name="hibernate.connection.provider_class" value="org.hibernate.hikaricp.internal.HikariCPConnectionProvider" />
            <property name="hibernate.jdbc.batch_size" value="10" />
            <property name="hibernate.hikari.connectionTimeout" value="20000" />
            <property name="hibernate.hikari.minimumIdle" value="5" />
            <property name="hibernate.hikari.maximumPoolSize" value="20" />
            <property name="hibernate.hikari.idleTimeout" value="30000" />
            <property name="hibernate.hikari.leakDetectionThreshold" value="30000" />
        </properties>
    </persistence-unit>
</persistence>